# vim: set ft=sh:

# Print an error message to error output then exit
#
# Arguments:
#
# $1 - Error message to print
error() {
    echo "Error: $1" >&2
    exit 1
}

# Print a status message
#
# Arguments:
#
# $1 - Current status message
status() {
    echo "=> $1" >&2
}

# Get the full tag of a Docker image
#
# Arguments:
#
# $1 - Name of the image
# $2 - Version of the image
image-name() {
    echo "ghcr.io/toltec-dev/$1:${2:-latest}"
}

# Get from image for a given image name
#
# Arguments:
# $1 - Name of the image
# $2 - Path to the images.json file
from-image() {
    jq -r .images."$1".from "$2"
}